@model Rogue_BT.Models.ApplicationUser
@{
    ViewBag.Title = "ManageUserRole";
}
<style>
	.btnWide {
	    width: 100%;
    }
</style>
<h2>Manage User Roles</h2>

<div class="row">
    <div class="col-3 text-center h2">Managing Role for @Model.FullName
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="row">
    <div class="col-3">
        @Html.DropDownList("RoleName", "-- No Role --")
    </div>
</div>
<br />
<div class="row">
    <div class="col-3">
        <button type="submit"class="btn btn-danger btnWide">Manage Role</button>
    </div>
</div>
}

